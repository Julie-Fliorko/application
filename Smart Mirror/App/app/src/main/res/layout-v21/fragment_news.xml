<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/fragment_news">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/menu_news"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- first story-->
    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="517dp"
        android:outlineSpotShadowColor="@color/colorAccent">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:background="@drawable/image1" />

        <TextView
            android:id="@+id/first_story"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="bottom"
            android:text="@string/first_story"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </FrameLayout>


    <!-- second story-->
    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="201dp"
        android:layout_marginLeft="201dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="524dp"
        android:outlineSpotShadowColor="@color/colorAccent">

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="180dp"
            android:layout_height="175dp"
            android:background="@drawable/image2" />

        <TextView
            android:id="@+id/second_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="bottom"
            android:text="@string/second_story"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </FrameLayout>


    <!-- third story-->
    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="208dp"
        android:layout_height="206dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="180dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="304dp"
        android:outlineSpotShadowColor="@color/colorAccent">

        <ImageButton
            android:id="@+id/button3"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:background="@drawable/image3" />

        <TextView
            android:id="@+id/third_story"
            android:layout_width="184dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="bottom"
            android:text="@string/third_story"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </FrameLayout>


    <!-- fourth story-->
    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="wrap_content"
        android:layout_height="196dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="201dp"
        android:layout_marginLeft="201dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="304dp"
        android:outlineSpotShadowColor="@color/colorAccent">

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="180dp"
            android:layout_height="175dp"
            android:background="@drawable/image4" />

        <TextView
            android:id="@+id/fourth_story"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:gravity="bottom"
            android:text="@string/fourth_story"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </FrameLayout>
</RelativeLayout>